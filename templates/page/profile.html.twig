{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block header %}
    {% include ('header/header.html.twig') %}
{% endblock %}
{% block content %}
    <div class="col-md-6">
        <h1>This page is "Profile"</h1>
        <div class="row">
            <div class="col-md-6">
                Login:
            </div>
            <div class="col-md-6">
                {{ app.user.login }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Password:
            </div>
            <div class="col-md-6">
                {{ app.user.password }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Email:
            </div>
            <div class="col-md-6">
                {{ app.user.email }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Company title:
            </div>
            <div class="col-md-6">
                {{ app.user.companyTitle }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Phone number:
            </div>
            <div class="col-md-6">
                {{ app.user.phoneNumber }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Name:
            </div>
            <div class="col-md-6">
                {{ app.user.name }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Address:
            </div>
            <div class="col-md-6">
                {{ app.user.address }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Profile photo:
            </div>
            <div class="col-md-6">
                {% if app.user.photo is not null %}
                    <img class="nav-profile-img rounded-circle profile-user_photo" src="{{ asset(app.user.photo) }}">
                {% else %}
                    <img class="nav-profile-img rounded-circle profile-user_photo" src="{{ asset('images/defaultUserPhoto.png') }}">
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    {% include ('footer/footer.html.twig') %}
{% endblock %}

